{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-plugin-prettier",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
      "indent": [true, "tab", 4],
      "arrow-return-shorthand": [true, "multiline"],
      "semicolon": [true, "always"],
      "prettier": [true, {
        "tabWidth": 4,
        "bracketSpacing": true
      }]
    },
    "rulesDirectory": []
}
